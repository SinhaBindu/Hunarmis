@{
    var IsViewer = false;// Hunarmis.Manager.CommonModel.IsRoleViewer();
}

<style>
    .treeview a, .log-out {
        font-weight: bold;
        font-size: 14px;
    }

    .treeview ul li a {
        margin-left: 10px !important;
        border-top: 1px solid #fff;
        margin-right: 15px;
        font-weight: normal;
        font-size: 13px;
    }

        .treeview ul li a i {
            font-size: 13px !important;
        }

    #mainnav-menu .main-icon {
        color: #2F17B5
    }

    #mainnav-menu .active-sub .main-icon {
        color: #fff !important;
    }
</style>

<nav id="mainnav-container">
    <div id="mainnav">
        <div id="mainnav-menu-wrap">
            <div class="nano">
                <div class="nano-content">
                    <div id="mainnav-profile" class="mainnav-profile">
                        <div class="profile-wrap text-center">
                            <div class="pad-btm">
                                <img class="img-circle img-md" src="~/Content/images/reading-graphic.png" alt="Profile Picture">
                            </div>
                            <a href="#profile-nav" class="box-block" data-toggle="collapse" aria-expanded="false">
                                @*<span class="pull-right dropdown-toggle">
                                        <i class="dropdown-caret"></i>
                                    </span>*@
                                @*<p class="mnp-name">@(MvcApplication.GetCurrentUserName())</p>*@
                                <span class="mnp-desc">@User.Identity.Name</span>
                            </a>
                        </div>
                    </div>
                    <ul id="mainnav-menu" class="list-group">
                        @if (!IsViewer)
                        {
                            @Html.ActionLinkMenu("<i class='fa fa-home main-icon'></i> <span class=\"menu-title\">Dashboard</span>", "Index", "Home")
                            if (User.IsInRole("Admin") || User.IsInRole("State") || User.IsInRole("User") || User.IsInRole("Verifier") || User.IsInRole("Viewer") || User.IsInRole("District"))
                            {
                                if (User.IsInRole("Admin") || User.IsInRole("State"))
                                {
                                    @Html.ActionLinkMenu("<i class='fa fa-home main-icon'></i> <span class=\"menu-title\">Excel Bulk Upload</span>", "ExcelFileUpload", "Participant")
                                }
                                <hr style="border-bottom: 1px solid #CCCCCC; font-size: medium; margin-top: 0px !important; margin-bottom: 0px !important;" />
                                <li class="treeview">
                                    <a href="#">
                                        <i class="fa fa-user main-icon"></i>
                                        <span class="menu-title">Participant</span>
                                        <i class="arrow"></i>
                                    </a>
                                    <ul class="collapse treeview-menu">
                                        <li>@Html.ActionLinkMenu("<i class='fa fa-plus'></i> <span>Add</span>", "AddParticipant", "Participant")</li>
                                        <li>@Html.ActionLinkMenu("<i class='fa fa-list'></i> <span>Participant List</span>", "ParticipantList", "Participant")</li>
                                        <li>@Html.ActionLinkMenu("<i class='fa fa-phone'></i> <span>Call Details</span>", "ParticipantCallList", "Participant")</li>
                                        <li>@Html.ActionLinkMenu("<i class='fa fa-list'></i> <span>Call Details List</span>", "PartQuestionList", "Participant")</li>
                                    </ul>
                                </li>
                                <hr style="border-bottom:1px solid #CCCCCC; font-size: medium; margin-top: 0px !important; margin-bottom: 0px !important;" />
                                <li class="treeview">
                                    <a href="#">
                                        <i class="fa fa-line-chart main-icon"></i>
                                        <span class="menu-title">Analysis</span>
                                        <i class="arrow"></i>
                                    </a>
                                    <ul class="collapse treeview-menu">
                                        <li>@Html.ActionLinkMenu("<i class='fa fa-pie-chart'></i> <span>Calling Responses</span>", "CallingDashboard", "Home")</li>
                                    </ul>
                                </li>
                                <hr style="border-bottom:1px solid #CCCCCC; font-size: medium; margin-top: 0px !important; margin-bottom: 0px !important;" />
                                if (User.IsInRole("Admin") || User.IsInRole("State"))
                                {
                                    <li class="treeview">
                                        <a href="#">
                                            <i class="fa fa-database main-icon"></i>
                                            <span class="menu-title">Master</span>
                                            <i class="arrow"></i>
                                        </a>
                                        <ul class="collapse treeview-menu">
                                            <li>@Html.ActionLinkMenu("<i class='fa fa-plus'></i> <span>Add Batch</span>", "BatchMaster", "Master")</li>
                                            <li>@Html.ActionLinkMenu("<i class='fa fa-plus'></i> <span>Add Courses</span>", "CoursesMaster", "Master")</li>
                                            <li>@Html.ActionLinkMenu("<i class='fa fa-plus'></i> <span>Add Educational</span>", "EducationalMaster", "Master")</li>
                                        </ul>
                                    </li>
                                    <hr style="border-bottom:1px solid #CCCCCC; font-size: medium; margin-top: 0px !important; margin-bottom: 0px !important;" />
                                    <li class="treeview">
                                        <a href="#">
                                            <i class="fa fa-cog main-icon"></i>
                                            <span class="menu-title">Manage User</span>
                                            <i class="arrow"></i>
                                        </a>
                                        <ul class="collapse treeview-menu">
                                            <li>@Html.ActionLinkMenu("<i class='fa fa-plus'></i> <span>Add User</span>", "Register", "Account")</li>
                                            <li>@Html.ActionLinkMenu("<i class='fa fa-list'></i> <span>User List</span>", "UserDetaillist", "Master")</li>
                                            @*<li>@Html.ActionLinkMenu("<i class='fa fa-key'></i> <span>Reset Password</span>", "UserResetPassword", "Account")</li>*@
                                        </ul>
                                    </li>
                                    <hr style="border-bottom:1px solid #CCCCCC; font-size: medium; margin-top: 0px !important; margin-bottom: 0px !important;" />
                                }
                            }
                        }


                        <li>
                            <a href="javascript:document.getElementById('logoutForm').submit()">
                                <i class="fa fa-sign-out main-icon"></i>
                                <span class="menu-title log-out">
                                    Logout
                                </span>
                            </a>
                        </li>
                        <li class="list-divider"></li>
                    </ul>
                    <div class="bootom-fixed">
                        <span class="fixed-divider"></span>
                        Version - 2.1.3
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>